/**index.wxss**/

.container {
    padding-bottom: 120rpx;
}


/* 头部 */

.header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 145rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
    padding-bottom: 15rpx;
}

.header .header-title {
    color: rgba(0, 0, 0, 1);
    font-size: 40rpx;
    font-weight: 700;
}

.header .oneWorld {
    font-size: 30rpx;
    color: rgba(0, 0, 0, 0.45);
    margin-top: 7rpx;
}

.card {
    margin: 40rpx;
}

.select-header {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
}

.select-header-title {
    font-size: 40rpx;
    margin: 25rpx 0;
    color: rgba(0, 0, 0, 1);
    font-weight: 600;
}

.nowSelect {
    display: flex;
    font-size: 30rpx;
    color: rgba(0, 0, 0, 0.45);
}

.nowSelect image {
    width: 42rpx;
    height: 42rpx;
}

.title {
    font-size: 40rpx;
    margin: 30rpx 0;
    color: rgba(0, 0, 0, 1);
    font-weight: 600;
}

.template-list {
    /* height: 0; */
    transition: all .2s;
    overflow: hidden;
}

.template-list .item {
    padding: 25rpx 40rpx;
    border-radius: 27.5px;
    border: 2px solid rgba(0, 0, 0, 0.06);
    margin-right: 20rpx;
    display: inline-block;
    font-size: 30rpx;
    margin: 5px 20rpx 20rpx 0;
    transition: all .2s;
}

.current {
    color: rgba(48, 184, 156, 1);
    /* background-color: #1459f1d6 !important; */
    border: 2px solid rgba(48, 184, 156, 1) !important;
}

.input {
    padding: 35rpx;
    border-radius: 30rpx;
    margin-bottom: 40rpx;
    background-color: rgba(0, 0, 0, 0.04);
    border: 4rpx solid rgba(0, 0, 0, 0);
    transition: all .2s;
}

.getFocus {
    border: 4rpx solid #30b89c;
    background-color: #fff;
}

.btn {
    margin: 60rpx 0 40rpx 0;
    color: #fff;
    border-radius: 10rpx;
}

.btn button {
    height: 110rpx;
    line-height: 110rpx;
    color: #fff;
    font-size: 34rpx;
    /* background-color: #1459F1; */
    border-radius: 15px;
    background: rgba(48, 184, 156, 1);
    /* margin-top: 40rpx; */
}

.ai {
    display: flex;
    background-color: rgba(48, 184, 157, 0.231);
    border-radius: 15rpx;
    padding: 30rpx 30rpx;
    align-items: center;
}

.ai-icon {
    display: flex;
    align-items: center;
    height: 100%;
}

.ai-icon image {
    width: 95rpx;
    height: 95rpx;
    margin-left: 15rpx;
}

.ai-text {
    flex: 1;
    padding-left: 45rpx;
    color: #fff;
}

.ai-title {
    font-weight: 700;
    color: rgba(48, 184, 157, 1);
    font-size: 40rpx;
}

.ai-content {
    color: #0000005b;
    font-size: 28rpx;
    margin-top: 10rpx;
}

.ai-enter {
    width: 60rpx;
    height: 60rpx;
}


/* 弹出层 */

.popup-content {
    padding: 40rpx;
}

.popup-header {
    display: flex;
    height: 80rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
    padding-bottom: 15rpx;
}

.popup-header-title {
    font-size: 35rpx;
    font-weight: 600;
}

.popup-header image {
    width: 45rpx;
    height: 45rpx;
    padding: 10rpx;
}

.popup-templateList {
    margin: 40rpx 0;
}

.popup-templateList .item {
    position: relative;
    padding: 25rpx 40rpx;
    border-radius: 27.5px;
    border: 2px solid rgba(0, 0, 0, 0.06);
    margin-right: 20rpx;
    display: inline-block;
    font-size: 30rpx;
    margin: 10rpx 20rpx 20rpx 0;
    transition: all .2s;
}

.popup-templateList .item .delete {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: -20rpx;
    right: -12rpx;
    height: 44rpx;
    width: 44rpx;
    color: #fff;
    border-radius: 50%;
    background-color: rgba(212, 48, 48, 1);
    font-size: 30rpx;
}

.popup-getMore {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    color: rgba(0, 0, 0, 0.65);
    font-size: 32rpx;
    text-align: center;
    border-radius: 15px;
    background: rgba(0, 0, 0, 0.06);
    /* margin-bottom: 120rpx; */
}


/* 公告 */

.notice-content {
    margin: 40rpx 0;
    font-size: 34rpx;
}

.check-me {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    border-radius: 15px;
    background: rgba(48, 184, 156, 1);
}

.awaitMe {
    width: 100%;
    height: 80rpx;
    line-height: 110rpx;
    color: rgba(0, 0, 0, 0.45);
    font-size: 32rpx;
    text-align: center;
    border-radius: 15px;
    /* background: rgba(48, 184, 156, 1); */
    /* margin-bottom: 120rpx; */
}