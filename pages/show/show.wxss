    /* pages/show/show.wxss */
    
    page {
        /* background-color: #fafafa; */
    }
    
    .top-header {
        display: flex;
        align-items: center;
        width: 100%;
        height: 140rpx;
        padding-left: 30rpx;
        background-color: #fff;
        z-index: 99;
        box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.05);
    }
    
    .top-header image {
        width: 45rpx;
        height: 45rpx;
        padding: 10rpx;
        margin-right: 15rpx;
    }
    
    .top-header .topic {
        font-size: 35rpx;
        font-weight: 700;
    }
    
    .top-header .number {
        font-size: 28rpx;
        color: rgba(0, 0, 0, 0.45);
        margin-top: 5rpx;
    }
    
    .header .tools {
        display: flex;
    }
    
    .tools image {
        width: 40rpx;
        height: 40rpx;
        margin-left: 35rpx;
    }
    
    .content {
        padding: 30rpx 40rpx;
        font-size: 35rpx;
        line-height: 1.6;
        word-spacing: 20rpx;
        background-color: #fff;
        /* box-shadow: 0 1px 5px rgba(18, 18, 18, 0.1); */
        margin: 30rpx;
        /* border-radius: 10rpx; */
        /* text-indent: 10rpx; */
        padding-bottom: 100rpx;
    }
    
    .content .edit {
        width: 100%;
        font-size: 35rpx;
        line-height: 1.6;
        word-spacing: 20rpx;
        margin-bottom: 100rpx;
        /* margin: 30rpx; */
        /* padding-bottom: 100rpx; */
    }
    
    .add {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        bottom: 50rpx;
        right: 50rpx;
        height: 100rpx;
        width: 100rpx;
        text-align: center;
        /* background-color: #30b89c; */
        border-radius: 50%;
        background: linear-gradient(130.4deg, rgba(68, 212, 183, 1) 0%, rgba(48, 184, 156, 1) 100%);
        box-shadow: 0px 2px 10px 1px rgba(48, 184, 156, 0.25);
    }
    
    .add image {
        width: 50rpx;
        height: 50rpx;
    }
    
    .sheet-content {
        margin: 30rpx 0;
    }
    
    .title {
        margin: 38rpx;
        display: flex;
    }
    
    .title .side {
        width: 11rpx;
        background-color: #1459F1;
        border-radius: 50rpx;
        padding: 10rpx 0;
        margin-right: 20rpx;
    }
    
    .title .titleContent {
        font-size: 35rpx;
    }
    
    .scroll-wrap {
        /* min-width: 100%; */
        white-space: nowrap;
    }
    
    .font-list {
        margin: 0 30rpx;
        /* width: 100%; */
        display: flex;
    }
    
    .font-list .font-item {
        position: relative;
        background-color: #eee;
        /* width: 100rpx; */
        margin-right: 30rpx;
        /* padding: 20rpx; */
        display: inline-block;
        border-radius: 10rpx;
        overflow: hidden;
    }
    
    .font-list .current {
        background-color: #1459F1;
        color: #fff;
    }
    
    .font-list .font-item .font-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all .2s;
    }
    
    .font-list .font-item .font-content .font-show {
        margin: 25rpx 0;
        border-radius: 50%;
        width: 100rpx;
        height: 100rpx;
        text-align: center;
        line-height: 100rpx;
    }
    
    .font-list .font-item .font-content .font-title {
        font-size: 27rpx;
        padding: 20rpx;
        text-align: center;
        background-color: #145af1b2;
        color: #fff;
    }
    
    .font-list .font-item .cover {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.411);
        color: #fff;
    }
    
    .bottom-tools {
        z-index: 9999;
        display: flex;
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: #fff;
        height: 100rpx;
        padding-left: 30rpx;
        box-shadow: 0px -5px 10px 0px rgba(0, 0, 0, 0.1);
    }
    
    .tools-item {
        width: 110rpx;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .tools-item image {
        width: 45rpx;
        height: 45rpx;
    }