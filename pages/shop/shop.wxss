/* pages/shop/shop.wxss */

.container {
    padding-bottom: 120rpx;
}


/* 头部 */

.header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 145rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
    padding-bottom: 15rpx;
}

.header .header-title {
    color: rgba(0, 0, 0, 1);
    font-size: 40rpx;
    font-weight: 700;
}

.header .oneWorld {
    font-size: 30rpx;
    color: rgba(0, 0, 0, 0.45);
    margin-top: 7rpx;
}


/* 轮播 */

swiper {
    height: 350rpx;
    background-color: #eee;
    margin: 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

swiper swiper-item {
    border-radius: 10rpx;
    overflow: hidden;
}

swiper image {
    width: 100%;
    height: 350rpx;
}

.main {
    background-color: #fff;
    /* margin-top: 20rpx; */
    padding: 0 30rpx;
    /* box-shadow: 0 1px 5px rgba(18, 18, 18, 0.1); */
}

.shop-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 90rpx;
    margin-top: 20rpx;
}

.shop-type-title {
    flex: 1;
    height: 100%;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    padding-bottom: 12rpx;
    margin-right: 25rpx;
    padding: 0 10rpx;
    font-size: 32rpx;
    color: rgba(0, 0, 0, 0.45);
}

.shop-header .free.current {
    color: rgba(48, 184, 156, 1);
    /* border-bottom: 6rpx solid #1459F1; */
    border-radius: 15px;
    background: rgba(48, 184, 156, 0.1);
}

.shop-header .nofree.current {
    color: rgba(39, 134, 242, 1);
    /* border-bottom: 6rpx solid #1459F1; */
    border-radius: 15px;
    background: rgba(39, 134, 242, 0.1);
}

.list {
    padding: 10rpx 0;
}

.list .item {
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.06);
    margin: 20rpx 10rpx;
    border-radius: 15px;
}

.list .item .content {
    /* border: 2rpx solid #eee; */
    padding: 25rpx;
}

.list .item .content .top {
    display: flex;
    align-items: center;
}

.list .item .content .top .name {
    display: inline-block;
    font-size: 26rpx;
    padding: 10rpx 20rpx;
    border-radius: 10px;
    color: rgba(0, 0, 0, 1);
    background: rgba(0, 0, 0, 0.06);
    margin-top: 10rpx;
}

.list .item .content .title {
    font-size: 36rpx;
    color: rgba(0, 0, 0, 1);
    margin: 25rpx 0;
    font-weight: 600;
}

.list .item .content .buttom {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 28rpx;
    color: #1459F1;
    margin-top: 10rpx;
}