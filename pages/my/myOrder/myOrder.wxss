.header {
    display: flex;
    /* position: fixed; */
    /* top: 0; */
    align-items: center;
    width: 100%;
    height: 100rpx;
    padding-left: 30rpx;
    background-color: #fff;
    z-index: 99;
}

.header image {
    width: 45rpx;
    height: 45rpx;
    padding: 10rpx;
}

.h1 {
    font-size: 50rpx;
    /* margin-top: 155rpx; */
    margin-left: 30rpx;
    margin-bottom: 35rpx;
}

.order-list {
    padding: 0 30rpx;
    margin-bottom: 30rpx;
}

.order-item {
    margin: 30rpx 0;
    padding: 30rpx;
    border: 3rpx solid #eee;
    border-radius: 15rpx;
    background-color: #fff;
}

.order-item .top {
    display: flex;
    justify-content: space-between;
    border-bottom: 3rpx solid #eee;
    padding-bottom: 25rpx;
}

.top .desc {
    font-size: 34rpx;
    /* font-weight: 600; */
}

.money {
    margin-top: 30rpx;
    font-size: 40rpx;
    color: rgb(214, 14, 14);
    font-weight: 700;
    margin-bottom: 30rpx;
}

.orderNum,
.orderTime {
    color: rgba(0, 0, 0, 0.486);
    font-size: 30rpx;
}