/* pages/search/search.wxss */

.header {
    display: flex;
    /* position: fixed; */
    /* top: 0; */
    align-items: center;
    width: 100%;
    height: 100rpx;
    padding-left: 30rpx;
    background-color: #fff;
    z-index: 99;
}

.header image {
    width: 45rpx;
    height: 45rpx;
    padding: 10rpx;
}

.h1 {
    font-size: 50rpx;
    /* margin-top: 155rpx; */
    margin-left: 30rpx;
    margin-bottom: 35rpx;
}

.search {
    display: flex;
    align-items: center;
    border: 3rpx solid #30b89c;
    margin: 0 30rpx;
    border-radius: 15rpx;
}

.search image {
    width: 60rpx;
    height: 60rpx;
    /* margin-right: 20rpx; */
    padding: 0 20rpx;
}

.search .input {
    flex: 1;
    padding: 15rpx 20rpx;
    /* margin: 0 20rpx 0rpx 30rpx; */
    /* background-color: rgba(0, 0, 0, 0.03); */
    border-radius: 10rpx;
}

.list {
    padding: 10rpx 30rpx;
}

.list .item {
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.06);
    margin: 20rpx 10rpx;
    border-radius: 15px;
}

.list .item .content {
    /* border: 2rpx solid #eee; */
    padding: 25rpx;
}

.list .item .content .top {
    display: flex;
    align-items: center;
}

.list .item .content .top .name {
    display: inline-block;
    font-size: 26rpx;
    padding: 10rpx 20rpx;
    border-radius: 10px;
    color: rgba(0, 0, 0, 1);
    background: rgba(0, 0, 0, 0.06);
    margin-top: 10rpx;
}

.list .item .content .title {
    font-size: 36rpx;
    color: rgba(0, 0, 0, 1);
    margin: 25rpx 0;
    font-weight: 600;
}

.list .item .content .buttom {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 28rpx;
    color: #1459F1;
    margin-top: 10rpx;
}